<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    
                    
                    xmlns:local="clr-namespace:GaugesApp"
                    xmlns:custom="clr-namespace:GaugesApp.CustomControls">
    
    <Style TargetType="custom:DigitalClock">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="custom:DigitalClock">
                    <ControlTemplate.Resources>
                        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                    </ControlTemplate.Resources>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="00"/>
                        <TextBlock x:Name="PART_Colon" Text=":"/>
                        <TextBlock Text="00"/>
                        <TextBlock Text=":" Visibility="{TemplateBinding ShowSeconds, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="00"
                                   Visibility="{TemplateBinding ShowSeconds, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>